{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Kernel",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile le kernel ALOS"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": [],
            "detail": "Nettoie les fichiers objets"
        },
        {
            "label": "Rebuild",
            "type": "shell",
            "command": "make clean && make",
            "group": "build",
            "problemMatcher": ["$gcc"],
            "detail": "Clean + Build complet"
        },
        {
            "label": "Run QEMU",
            "type": "shell",
            "command": "make run",
            "problemMatcher": [],
            "detail": "Lance le kernel dans QEMU"
        },
        {
            "label": "Debug Build",
            "type": "shell",
            "command": "make clean && make CFLAGS='-std=gnu99 -ffreestanding -O0 -g -Wall -Wextra'",
            "group": "build",
            "problemMatcher": ["$gcc"],
            "detail": "Compile avec symboles de debug (-g -O0)"
        },
        {
            "label": "QEMU Debug Server",
            "type": "shell",
            "command": "qemu-system-i386 -kernel alos.bin -s -S",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*$",
                    "endsPattern": "^.*$"
                }
            },
            "detail": "Lance QEMU en mode debug (attend GDB sur port 1234)"
        }
    ]
}
