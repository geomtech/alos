{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Kernel (QEMU + GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/alos.bin",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerServerAddress": "localhost:1234",
            "setupCommands": [
                {
                    "description": "Activer le pretty-printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Architecture i386",
                    "text": "set architecture i386",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "QEMU Debug Server",
            "logging": {
                "moduleLoad": false,
                "trace": false,
                "engineLogging": false,
                "programOutput": true
            }
        },
        {
            "name": "Attach to QEMU",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/alos.bin",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "miDebuggerServerAddress": "localhost:1234",
            "setupCommands": [
                {
                    "description": "Architecture i386",
                    "text": "set architecture i386",
                    "ignoreFailures": false
                }
            ]
        }
    ]
}
